<!-- All our projects begin with the project tag -->
<project name="Space Trader" default="all" basedir=".">
	<!-- our init target is a prereq for everything -->
	<target name="init">
		<property name = "src.dir" value = "src" />
		<property name = "build.dir" value = "src" />
	</target>
	
	<!-- prepare is a prereq for most tasks except cleanup -->
	<target name="prepare" depends="init">
		<mkdir dir = "${build.dir}" />
	</target>
	
	<!-- compile the code -->
	<target name="compile" depends="prepare">
		<javac srcdir="${src.dir}" destdir="${build.dir}" />
	</target>
	
	<!-- run the application -->
	<target name="run" depends="compile">
		<java classname="main.SpaceTrader">
	         <arg value="-g"/>
			 <arg value="test.arg" />
			 <classpath>
			 	<pathelement path="${java.class.path}" />
	            <pathelement location="${build.dir}" />
		     </classpath>
       </java>
	</target>
	
	<!-- clean up all files generated by the build -->
	<target name="clean" depends="init">
		<delet dir="${build.dir}"/>
	</target>
	
	<!-- run all tasks except cleanup -->
	<target name="all" depends="run">
	
	</target>

</project>